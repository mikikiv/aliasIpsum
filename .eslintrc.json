{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        // should be the same values as in .prettierrc
        "trailingComma": "es5",
        "tabWidth": 2,
        "useTabs": false,
        "semi": false
      }
    ]
  }
}
