{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "attributePosition": "auto",
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/coverage/**",
      "!**/.git/**",
      "!**/.vscode/**",
      "!**/.github/**",
      "!**/.yarn/**",
      "!**/.pnp/**",
      "!**/.cache/**",
      "!**/.next/**",
      "!**/.nuxt/**",
      "!**/out/**",
      "!**/public/**",
      "!**/static"
    ]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": { "recommended": true },
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/coverage/**",
      "!**/.git/**",
      "!**/.vscode/**",
      "!**/.github/**",
      "!**/.yarn/**",
      "!**/.pnp/**",
      "!**/.cache/**",
      "!**/.next/**",
      "!**/.nuxt/**",
      "!**/out/**",
      "!**/public/**",
      "!**/static"
    ]
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "attributePosition": "auto"
    }
  }
}
